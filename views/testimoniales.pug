extends ./layout/index

block contenido
    main(class="container mt-5")
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Conoce las experiencias de nuestro clientes
        include ./layout/bloque_testimonios.pug


        div(class="row")
            .col-md-12
                h2.d-block.w-100.text-center Agregar tu Testimonio 
                
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
                
                .row.justify-content-center.col 
                    .col-md-8 
                        form(action="/testimoniales", method="POST")
                            .from-group 
                                label(for="nombre") Nombre
                                input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)
                            .from-group 
                                label(for="email") Email
                                input#email(type="text", placeholder="Tu email", name="email", class="form-control", value= email)
                            .from-group 
                                label(for="mensaje") Mensaje
                                textarea#mensaje(type="text", placeholder="Tu mensaje", name="mensaje", class="form-control")= mensaje

                            input.btn.btn-success.btn-block.mt-4(type="submit")