extends ./layout/index

block contenido
    main(class="container mt-5")
        div(class="row")
            div(class="col-md-5")
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg` alt="imagen viaje" class="img-fluid")
            div(class="col-md-7")
                h1(class="text-center") #{viaje.destino}
                p 
                    i(class="fa-regular fa-calendar mr-2")
                    | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                p 
                    i(class="fa-solid fa-dollar-sign")
                    |#{viaje.precio} Dolares
                p 
                    i(class="fa-solid fa-users mr-2")
                    |#{viaje.cantidad} Disponibles
                p #{viaje.comentario}